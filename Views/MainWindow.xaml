<Window x:Class="Launcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Gaming Launcher" Height="800" Width="1280" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="MainWindow_OnLoaded" ResizeMode="NoResize">

    <Window.Resources>
        <DataTemplate x:Key="GridViewItemTemplate">
            <Border Background="Transparent" CornerRadius="6" Width="140" Height="160" Margin="5" ClipToBounds="True">
                <Grid>
                    <Image Source="{Binding CoverArtPath}" Stretch="UniformToFill"/>

                    <Border x:Name="TitleOverlay"
                    VerticalAlignment="Bottom"
                    Height="40"
                    Opacity="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#00000000" Offset="0.0"/>
                                <GradientStop Color="#D0000000" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Viewbox Margin="5,2,5,2" Stretch="Uniform">
                            <TextBlock
                        Text="{Binding Name}"
                        Foreground="White"
                        FontWeight="SemiBold"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        MaxWidth="135" />
                        </Viewbox>
                    </Border>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="TitleOverlay" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.25"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="TitleOverlay" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="ListViewItemTemplate">
            <Border Padding="12,8">
                <TextBlock Text="{Binding Name}" Foreground="#DDD"/>
            </Border>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="GridViewPanelTemplate">
            <UniformGrid Columns="2"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="ListViewPanelTemplate">
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="background" Background="{TemplateBinding Background}" CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect x:Name="glowEffect" ShadowDepth="0" BlurRadius="0" Color="White" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="background" Property="Background" Value="#22FFFFFF"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="background" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="background" Background="{TemplateBinding Background}" CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect x:Name="glowEffect" ShadowDepth="0" BlurRadius="0" Color="#E81123" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="background" Property="Background" Value="#E81123"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="background" Property="Background" Value="#F1707A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="White" Opacity="0" BlurRadius="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="White"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.9" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="18" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox" x:Key="CustomComboBoxStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Grid.Column="2"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                          Content="&#x25BC;"/>
                            <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                              HorizontalAlignment="Left"
                                              Margin="3"/>
                            <Popup IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   Focusable="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <LinearGradientBrush x:Key="GlassGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#40FFFFFF" Offset="0"/>
            <GradientStop Color="#10FFFFFF" Offset="0.5"/>
            <GradientStop Color="#05FFFFFF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GlassGradientHover" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#50FFFFFF" Offset="0"/>
            <GradientStop Color="#20FFFFFF" Offset="0.5"/>
            <GradientStop Color="#10FFFFFF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GlassGradientPressed" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#30FFFFFF" Offset="0"/>
            <GradientStop Color="#15FFFFFF" Offset="0.5"/>
            <GradientStop Color="#08FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="#FF3A3A3A">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="Black" BlurRadius="100" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid>
                <wv2:WebView2 x:Name="BackgroundWebView" Visibility="Collapsed" />

                <Image x:Name="BackgroundImage" Stretch="UniformToFill">
                    <Image.Effect>
                        <BlurEffect Radius="30"/>
                    </Image.Effect>
                </Image>
                <Image x:Name="BackgroundImage_FadeIn" Stretch="UniformToFill" Opacity="0">
                    <Image.Effect>
                        <BlurEffect Radius="30"/>
                    </Image.Effect>
                </Image>

                <Rectangle Fill="Black" Opacity="0.6"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="10" CornerRadius="8" BorderThickness="1"
                        BorderBrush="#44FFFFFF" Background="#33000000" ClipToBounds="True">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="20" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="16,16,16,10">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GamepadVariant" Width="24" Height="24"
                                                         Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Library" FontSize="22" FontWeight="SemiBold"
                                           Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ToggleViewButton" Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="Изменить вид" Click="ToggleViewButton_Click" Foreground="White">
                                    <materialDesign:PackIcon Kind="ViewGrid" Width="20" Height="20"/>
                                </Button>
                                <Button x:Name="RefreshGamesButton" Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="Обновить библиотеку"
                                        Click="RefreshGamesButton_Click" Foreground="White">
                                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <ComboBox Grid.Row="1" x:Name="FilterComboBox" Margin="16,0,16,10"
                                  materialDesign:HintAssist.Hint="Фильтр по платформе"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectionChanged="FilterComboBox_SelectionChanged" Foreground="White">
                            <ComboBoxItem Content="Все платформы"/>
                            <ComboBoxItem Content="Steam"/>
                            <ComboBoxItem Content="Epic Games"/>
                        </ComboBox>

                        <TextBox Grid.Row="2" FontSize="15" x:Name="SearchTextBox" Margin="16,0,16,10"
                                 materialDesign:HintAssist.Hint="🔍 Поиск игр..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Style="{StaticResource SearchBoxStyle}"
                                 TextChanged="SearchTextBox_TextChanged" Foreground="White"/>

                        <ListBox Grid.Row="3" x:Name="GameListBox"
                                 SelectionChanged="GameListBox_SelectionChanged" SelectionMode="Single"
                                 Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="5,0,5,0"
                                 HorizontalContentAlignment="Stretch">
                            <ListBox.Resources>
                                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                            </ListBox.Resources>
                            <ListBox.ItemsPanel>
                                <StaticResource ResourceKey="ListViewPanelTemplate"/>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <StaticResource ResourceKey="ListViewItemTemplate"/>
                            </ListBox.ItemTemplate>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Margin" Value="4,2"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="2"
                                                        CornerRadius="6"
                                                        SnapsToDevicePixels="true">
                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                            <Condition Property="IsSelected" Value="False"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                                                    </MultiTrigger>

                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="White"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="0" Color="White" BlurRadius="15" Opacity="0.7"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <Border Grid.Row="4" Margin="16,8,16,16" CornerRadius="6"
                                Background="#22FFFFFF" Padding="12,6">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Games" Foreground="White" Width="14" Height="14"
                                                         VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="GameCountTextBlock" Text="0 игр"
                                           Foreground="#CCCCCC" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Margin="5,10,10,10">
                    <materialDesign:Card x:Name="DetailsPanel" Padding="32" UniformCornerRadius="8"
                                         Visibility="Hidden" Opacity="0.3" Background="#11000000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="GameTitleTextBlock" Grid.Row="0"
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                       Margin="0,0,0,25" TextWrapping="Wrap"
                                       Foreground="White" FontWeight="SemiBold"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Height="280" Width="210" CornerRadius="8"
                                        Background="#44000000" VerticalAlignment="Top"
                                        HorizontalAlignment="Left">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="4" Color="Black"
                                                          Opacity="0.6" BlurRadius="12"/>
                                    </Border.Effect>
                                    <Image x:Name="GamePosterImage" Stretch="UniformToFill"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="25,0,0,0">
                                    <StackPanel x:Name="SteamIdPanel" Margin="0,0,0,15">
                                        <TextBlock Text="Steam App ID"
                                                   Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                                   Foreground="#AAAAAA" Margin="0,0,0,4"/>
                                        <Border CornerRadius="4" Background="#22FFFFFF"
                                                Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock x:Name="AppIdTextBlock"
                                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                       Foreground="White" FontFamily="Consolas"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Installation Path"
                                                   Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                                   Foreground="#AAAAAA" Margin="0,0,0,4"/>
                                        <Border CornerRadius="4" Background="#11FFFFFF"
                                                BorderBrush="#33FFFFFF" BorderThickness="1"
                                                Padding="8,6">
                                            <TextBlock x:Name="InstallPathTextBlock"
                                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                       TextWrapping="Wrap" Foreground="#DDDDDD"
                                                       FontFamily="Consolas" FontSize="11"/>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Last Played"
                                                   Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                                   Foreground="#AAAAAA" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="LastPlayedTextBlock"
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                   Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Platform"
                                                   Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                                   Foreground="#AAAAAA" Margin="0,0,0,4"/>
                                        <Border CornerRadius="4" Background="#44696969"
                                                Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock x:Name="SourceTextBlock"
                                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                       Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <Border Grid.Row="2" Margin="0,25,0,0" CornerRadius="8"
                                    BorderThickness="1" BorderBrush="#44FFFFFF"
                                    Padding="20" Background="#33000000">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="ОПИСАНИЕ"
                                               FontSize="14" FontWeight="Bold"
                                               Foreground="#FFFFFF" Margin="0,0,0,10"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ScrollViewer Grid.Column="0" MaxHeight="120"
                                                      VerticalScrollBarVisibility="Auto"
                                                      Background="Transparent"
                                                      Margin="0,0,15,0">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
                                            </ScrollViewer.Resources>
                                            <TextBlock x:Name="GameDescriptionTextBlock"
                                                       FontSize="13"
                                                       Foreground="#CCCCCC"
                                                       TextWrapping="Wrap"
                                                       LineHeight="18"
                                                       Text="Описание игры будет отображаться здесь."/>
                                        </ScrollViewer>

                                        <Button Grid.Column="1" x:Name="PlayButton" Click="PlayButton_Click"
                                                ToolTip="Play Game" VerticalAlignment="Bottom"
                                                Width="72" Height="72"
                                                Cursor="Hand"
                                                BorderThickness="0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Grid>
                                                                    <Border x:Name="GlassBackground"
                                                                            CornerRadius="36"
                                                                            BorderThickness="1"
                                                                            BorderBrush="#40FFFFFF"
                                                                            Background="{StaticResource GlassGradient}"
                                                                            Opacity="0.9">
                                                                        <Border.Effect>
                                                                            <BlurEffect Radius="2"/>
                                                                        </Border.Effect>
                                                                    </Border>
                                                                    <Border CornerRadius="36" Background="#15FFFFFF" BorderThickness="1" BorderBrush="#30FFFFFF">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="GlassBackground" Property="Background" Value="{StaticResource GlassGradientHover}"/>
                                                                        <Setter TargetName="GlassBackground" Property="BorderBrush" Value="#60FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="GlassBackground" Property="Background" Value="{StaticResource GlassGradientPressed}"/>
                                                                        <Setter TargetName="GlassBackground" Property="Opacity" Value="0.8"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                            <Button.Effect>
                                                <DropShadowEffect ShadowDepth="2" Color="#30000000" BlurRadius="20" Opacity="0.3"/>
                                            </Button.Effect>
                                            <materialDesign:PackIcon Kind="Play" Height="36" Width="36" Foreground="White"/>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card x:Name="PlaceholderPanel" Padding="32" UniformCornerRadius="8"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         Background="#33000000">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowLeft" VerticalAlignment="Center"
                                                     Margin="0,0,12,0" Foreground="#666666"/>
                            <TextBlock Text="Select a game from library"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Foreground="#888888"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <Grid Height="40" Margin="377,10,10,0" VerticalAlignment="Top" Background="Transparent" MouseDown="TitleBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Click="Profile_Click" ToolTip="Dev info">
                        <materialDesign:PackIcon Kind="HelpCircleOutline" Width="25" Height="25"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Click="Minimize_Click" ToolTip="Minimize">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}"
                           Click="Close_Click" ToolTip="Close">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>